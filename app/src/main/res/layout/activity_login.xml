<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context="com.example.tailoredtech.smartparking.activities.LoginActivity">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewpager"/>

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/pageIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fillColor="@color/white"
            android:layout_gravity="bottom"
            app:pageColor="@color/gray"
            app:radius="3dip"
            android:layout_marginBottom="80dp"
            app:snap="true"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="1dip" />

    <LinearLayout
        android:id="@+id/action_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

        <com.example.tailoredtech.smartparking.widget.AppButton
            android:id="@+id/btn_sign_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:background="@drawable/sign_btn_selector"
            android:text="@string/sign_in"
            android:textColor="@android:color/white"
            android:textAllCaps="true"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"/>

        <com.example.tailoredtech.smartparking.widget.AppButton
            android:id="@+id/btn_fb_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="@string/facebook_login"
            android:background="@drawable/sign_btn_selector"
            android:textColor="@android:color/white"
            android:textAllCaps="true"/>

    </LinearLayout>


</FrameLayout>
