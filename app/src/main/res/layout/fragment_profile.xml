<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.tailoredtech.smartparking.fragments.ProfileFragment">

    <com.example.tailoredtech.smartparking.widget.AppButton
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/draw_scroll_top_grey"
        android:gravity="left|center"
        android:clickable="true"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:text="Account"
        android:textAllCaps="false"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <com.example.tailoredtech.smartparking.widget.AppButton
        android:id="@+id/add_free_slot"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/draw_scroll_top_grey"
        android:clickable="true"
        android:gravity="left|center"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:text="Add Free Slot"
        android:textAllCaps="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <com.example.tailoredtech.smartparking.widget.AppButton
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/draw_scroll_top_grey"
        android:clickable="true"
        android:gravity="left|center"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:text="Booking History"
        android:textAllCaps="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <com.example.tailoredtech.smartparking.widget.AppButton
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/draw_scroll_top_grey"
        android:clickable="true"
        android:gravity="left|center"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:text="Saved Cards"
        android:textAllCaps="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>
